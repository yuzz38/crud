{% extends "__layout.twig" %}

{% block content %}
    <br>
    <h2>Редактирование TOYOTA</h2>
    <hr>
    {% if message %}
        <div class="alert alert-info">
            {{message}}
            <a href="../{{id}}">Открыть сие чудо</a>
        </div>
    {% endif %}
    <form action="" enctype="multipart/form-data" method="post" class="row g-3">
        <div class="col-4">
            <label class="form-label">Модель</label>
            <input type="text" class="form-control" name="title" value="{{object.title}}">
        </div>
        <div class="col-4">
            <label class="form-label">Заголовок</label>
            <input type="text" class="form-control" name="description" value="{{object.description}}">
        </div>
        <div class="col-4">
            <label class="form-label">Тип</label>
            <select class="form-control" name="type">
               {% for type in types_from_types %}
                    <option value="{{ type.nametype }}"{% if type.nametype == object.type %}selected{% endif %}>{{ type.nametype }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="col-12">
            <textarea name="info" placeholder="Полное описание..." class="form-control" rows="5">{{object.info}}</textarea>
        </div>
        <div class="col-12">
            <label  class="form-label">Картинка</label>
            <input class="form-control" type="file" name="image" placeholder={{object.image}}>
          </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    </form>

{% endblock %}